{
  "compilerOptions": {
    "strict": false,
    "module": "esnext",
    "jsx": "react",
    "esModuleInterop": true,
    "target": "ES6",
    "outDir": "dist",
    "skipLibCheck": true,
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ],
    "sourceMap": true,
    "lib": [
      "dom",
      "es2017.object",
      "es2019.object"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
